<p id="notice"><%= notice %></p>

<h1>Listing Pools</h1>

<table>
  <thead>
    <tr>
      <th>Categoria</th>
      <th>Codigo</th>      
      <th>Monto</th>
      <th>Balance</th>
      <th>N comprobante</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pools.each do |pool| %>
      <tr>
        <td><%= pool.category_type %></td>
        <td><%= pool.category.code %></td>
        <td><%= pool.monto %></td>
        <td><%= pool.balance %></td>
        <td><%= pool.n_comprobante %></td>
        <td><%= pool.description %></td>
        <td><%= link_to 'Show', pool %></td>
        <td><%= link_to 'Edit', edit_pool_path(pool) %></td>
        <td><%= link_to 'Destroy', pool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

