<p id="notice"><%= notice %></p>

<h1>Listing Pools</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Categoria</th>
      <th>Nombre o Alias</th>      
      <th>Monto</th>
      <th>Balance</th>
      <th>Cuenta</th>
      <th>Tipo de comprobante</th>
      <th>NÂº comprobante</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pools.each do |pool| %>
      <tr>
        <td><%= (link_to pool.category.table_name_to_show, pool.category.class) if pool.category %></td>
        <td><%= (link_to pool.category.record_name_to_show, pool.category) if pool.category %></td>
        <td><%= (link_to pool.razon_social.record_name_to_show, pool.razon_social) if pool.razon_social %></td>
        <td><%= pool.monto %></td>
        <td><%= pool.balance %></td>
        <td><%= pool.cuenta %></td>
        <td><%= pool.comprobante_type %></td>
        <td><%= pool.n_comprobante %></td>
        <td><%= pool.description %></td>
        <td><%= link_to 'Show', pool %></td>
        <td><%= link_to 'Edit', edit_pool_path(pool) %></td>
        <td><%= link_to 'Destroy', pool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

    <%= render 'form_table' %>

  </tbody>
</table>


