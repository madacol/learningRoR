<%= form_for(@pool) do |f| %>
  <% if @pool.errors.any? %>
    <div id="error_explanation_<%=@id%>">
      <h2><%= pluralize(@pool.errors.count, "error") %> prohibited this pool from being saved:</h2>
      <ul>
      <% @pool.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :date_of, class: "control-label" %><br>
    </div>
    <div class="col-sm-4">
      <%= f.date_field :date_of, class: "form-control" %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= label_tag( "pool_category_type_#{@id}", 'Categoría' ) %><br>
    </div>
    <div class="col-sm-4"> 
      <%= f.select(:category_type, options_for_select( categories.collect { |category| [eval(category).new.table_name_to_show, category] }, @pool.category_type ), { prompt: '--Seleccionar--'}, { class: "form-control c-select", id: "pool_category_type_#{@id}" } ) %>
    </div>
    <% categories.each do |category| %>
      <div id= <%= category+@id %> class="<%= 'hidden' if @pool.category_type != category %>">
        <div class="col-sm-4">
          <%= f.collection_select( :category_id, eval(category).all, :id, :record_name_to_show, { prompt: '-Seleccionar-'}, { class: "form-control c-select" }) %>
        </div>
        <div class="col-sm-2">
            <button type="button" class="btn btn-primary">Añadir</button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label( 'pool_razon_social_id_#{@id}', RazonSocial.new.table_name_to_show, class: "control-label") %>
    </div>
    <div class="col-sm-8">
      <%= f.collection_select( :razon_social_id, RazonSocial.all, :id, :record_name_to_show, { prompt: '-Seleccionar-'}, { class: "form-control c-select" }) %>
    </div>
    <div class="col-sm-2">
        <button type="button" class="btn btn-primary">Añadir</button>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :monto, class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :monto, class: "form-control", :required => true %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :comprobante_type %><br>
    </div>
    <div class="col-sm-10">
      <%= f.collection_radio_buttons(:comprobante_type, Pool.comprobante_types, :first, :first) do |b|
        content_tag(:div, class: "form-check") do
          b.label(class: "form-check-label") {
            b.radio_button(class: "form-check-input") + b.text
          }
        end
      end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :n_comprobante, class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :n_comprobante, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :description, class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
<% end %>
