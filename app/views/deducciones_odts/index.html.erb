<p id="notice"><%= notice %></p>
<h1>Listing <%= DeduccionOdt.new.table_name_to_show %></h1>
<p>
  <%= render 'layouts/modal_button', :btn_name => 'Nuevo Registro', :namespace_id => "new_deducciones_odt" %>
  <%= render 'layouts/modal', :@deducccion_odt => @new_deducccion_odt, :modal_title => 'Añadir Deduccion', :namespace_id => 'new_deduccion_odt' %>
</p>
<div class="table-responsive">
  <table class="table table-sm table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th><%= link_to Odt.new.table_name_to_show, odts_path  %></th>
        <th>Name</th>
        <th><%= DeduccionesOdt.new.table_name_to_show %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @deducciones_odts.each do |deducciones_odt| %>
        <tr>
          <td><%= link_to deducciones_odt.odt.record_name_to_show, deducciones_odt.odt %></td>
          <td><%= deducciones_odt.name %></td>
          <td><%= deducciones_odt.p_gasto %></td>
          <td><%= render "layouts/modal", :@deduccion_odt => deduccion_odt, :btn_name => 'Editar', :namespace_id => "edit_deduccion_odt_#{deduccion_odt.id}" %></td>
          <td>
            <%= render 'layouts/modal_button', :btn_name => 'Editar', :namespace_id => "edit_deducciones_odt_#{deducciones_odt.id}" %>
            <%= render 'layouts/modal', :@deducciones_odt => deducciones_odt, :modal_title => 'Editar', :namespace_id => "edit_deducciones_odt_#{deducciones_odt.id}" %>
          </td>
          <td><%= link_to '×', deduccion_odt, method: :delete, data: { confirm: '¿Está seguro?' }, :remote => true, class: "close equis delete_row" %></td>' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

