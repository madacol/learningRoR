<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal_<%=id%>"><%=btn_name%>
</button>
<div class="modal fade" id="Modal_<%=id%>" tabindex="-1" role="dialog" aria-labelledby="Modal_<%=id%>Label" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h4 class="modal-title" id="Modal_<%=id%>Label">Nuevo registro</h4>
      </div>
      <div class="modal-body">
        <%= form_for(employee) do |f| %>
          <% if employee.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(employee.errors.count, "error") %> prohibited thisemployee from being saved:</h2>

              <ul>
              <% employee.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :cedula, class: "control-label" %><br>
            </div>
            <div class="col-sm-10">
              <%= f.text_field :cedula, class: "form-control" %>
            </div>  
          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :name, class: "control-label" %><br>
            </div>
            <div class="col-sm-10">
              <%= f.text_field :name, class: "form-control" %>
            </div>  
          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :last_name, class: "control-label" %><br>
            </div>
            <div class="col-sm-10">
              <%= f.text_field :last_name, class: "form-control" %>
            </div>  
          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :phone_number, class: "control-label" %><br>
            </div>
            <div class="col-sm-10">
              <%= f.text_field :phone_number, class: "form-control" %>
            </div>  
          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :email, class: "control-label" %><br>
            </div>
            <div class="col-sm-10">
              <%= f.text_field :email, class: "form-control" %>
            </div>  
          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :address, class: "control-label" %><br>
            </div>
            <div class="col-sm-10">
              <%= f.text_area :address, class: "form-control" %>
            </div>  
          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :startdate, class: "control-label" %><br>
            </div>
            <div class="col-sm-10">
              <%= f.date_field :startdate, class: "form-control" %>
            </div>  
          </div>
          <div class="form-group row">
            <div class="col-sm-2">
              <%= f.label :note, class: "control-label" %><br>
            </div>
            <div class="col-sm-10">
              <%= f.text_area :note, class: "form-control" %>
            </div>  
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= submit_tag 'Guardar registro', class: "btn btn-primary", form: id %>
      </div>
    </div>
  </div>
</div>