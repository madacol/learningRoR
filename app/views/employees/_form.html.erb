<%= form_for(@employee, namespace: namespace_id, :html=> {:id => namespace_id}) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :cedula, "Nº de Cédula", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :cedula, class: "form-control", :required => true %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :name, "Nombre", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", :required => true %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :last_name, "Apellido", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :last_name, class: "form-control", :required => true %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :phone_number, "Nº de teléfono", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :phone_number, class: "form-control" %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :email, "E-mail", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control", :required => true %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :address, "Dirección", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :address, class: "form-control" %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :startdate, "Fecha de ingreso", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.date_field :startdate, :value => Date.today, class: "form-control" %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :note, "Observaciones", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :note, class: "form-control" %>
    </div>  
  </div>
<% end %>