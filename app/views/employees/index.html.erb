<p id="notice"><%= notice %></p>
<h1><%= Employee.new.table_name_to_show %></h1>
<p>
  <%= render 'layouts/modal_button', :btn_name => 'Nuevo Registro', :namespace_id => "new_employee" %>
  <%= render 'layouts/modal', :@employee => @new_employee, :modal_title => 'Nuevo Registro', :namespace_id => 'new_employee' %>
</p>
<div class="table-responsive">
  <table class="table table-sm table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>Nº de Cédula</th>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Número de teléfono</th>
        <th>E-mail</th>
        <th>Dirección</th>
        <th>Fecha de ingreso</th>
        <th>Balance de préstamo</th>
        <th>Observaciones</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @employees.reverse.each do |employee| %>
        <tr>
          <td><%= employee.cedula %></td>
          <td><%= employee.name %></td>
          <td><%= employee.last_name %></td>
          <td><%= employee.phone_number %></td>
          <td><%= employee.email %></td>
          <td><%= employee.address %></td>
          <td><%= employee.startdate %></td>
          <td><%= employee.get_loan_balance %></td>
          <td><%= employee.note %></td>
          <td>
            <%= render 'layouts/modal_button', :btn_name => 'Editar', :namespace_id => "edit_employee_#{employee.id}" %>
            <%= render 'layouts/modal', :@employee => employee, :modal_title => 'Editar', :namespace_id => "edit_employee_#{employee.id}" %>
          </td>
          <td><%= link_to '×', employee, method: :delete, data: { confirm: '¿Está seguro?' }, :remote => true, class: "close equis delete_row" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

