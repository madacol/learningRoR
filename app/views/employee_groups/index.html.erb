<p id="notice"><%= notice %></p>

<h1>Listing Employee Groups</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Auth group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employee_groups.each do |employee_group| %>
      <tr>
        <td><%= employee_group.employee %></td>
        <td><%= employee_group.auth_group %></td>
        <td><%= link_to 'Show', employee_group %></td>
        <td><%= link_to 'Edit', edit_employee_group_path(employee_group) %></td>
        <td><%= link_to 'Destroy', employee_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

