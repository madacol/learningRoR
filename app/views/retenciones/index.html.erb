<p id="notice"><%= notice %></p>
<h1><%= Retencione.new.table_name_to_show %></h1>
<p>
  <%= render 'layouts/modal_button', :btn_name => 'Nuevo Registro', :namespace_id => "new_retencione" %>
  <%= render 'layouts/modal', :@retencione => @new_retencione, :modal_title => 'Nuevo Registro', :namespace_id => 'new_retencione' %>
</p>
<div class="table-responsive">
  <table  class="table table-sm table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @retenciones.reverse.each do |retencione| %>
        <tr>
          <td><%= retencione.name %></td>
          <td><%= retencione.description %></td>
          <td>
            <%= render 'layouts/modal_button', :btn_name => 'Editar', :namespace_id => "edit_retencione_#{retencione.id}" %>
            <%= render 'layouts/modal', :@retencione => retencione, :modal_title => 'Editar', :namespace_id => "edit_retencione_#{retencione.id}" %>
          </td>
          <td><%= link_to '×', retencione, method: :delete, data: { confirm: '¿Está seguro?' }, :remote => true, class: "close equis delete_row" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
