<p id="notice"><%= notice %></p>

<h1><%= Gg.new.table_name_to_show %></h1>

<p><%= render 'layouts/modal', :@gg => @new_gg, :btn_name => 'Nuevo Registro', :namespace_id => 'new_gg' %> </p>

<div class="table-responsive">
  <table  class="table table-sm table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th>Code</th>
      <th>Alias</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ggs.reverse.each do |gg| %>
      <tr>
        <td><%= gg.code %></td>
        <td><%= gg.alias %></td>
        <td><%= gg.description %></td>
        <td><%= render 'layouts/modal', :@gg => gg, :btn_name => 'Editar', :namespace_id => "edit_gg_#{gg.id}" %></td>
        <td><%= link_to '×', gg, method: :delete, data: { confirm: '¿Está seguro?' }, :remote => true, class: "close equis delete_row" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
