<p id="notice"><%= notice %></p>

<h1>Listing <%= Odt.new.table_name_to_show %></h1>

<table  class="table table-hover">
  <thead>
    <tr>
      <th>Code</th>
      <th>Alias</th>
      <th>Description</th>
      <th><%= link_to RazonSocial.new.table_name_to_show, razon_socials_path %></th>
      <th>Monto contrato</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @odts.each do |odt| %>
      <tr>
        <td><%= odt.code %></td>
        <td><%= odt.alias %></td>
        <td><%= odt.description %></td>
        <td><%= link_to odt.razon_social.record_name_to_show, odt.razon_social %></td>
        <td><%= odt.monto_contrato %></td>
        <td><%= link_to 'Show', odt %></td>
        <td><%= link_to 'Edit', edit_odt_path(odt) %></td>
        <td><%= link_to 'Destroy', odt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New '.concat(Odt.new.table_name_to_show), new_odt_path %>
