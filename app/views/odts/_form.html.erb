<%= form_for(@odt) do |f| %>
  <% if @odt.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@odt.errors.count, "error") %> prohibited this odt from being saved:</h2>
        <ul>
          <% @odt.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :code, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :code, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :alias, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :alias, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :description, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= label_tag( 'odt_razon_social_id', RazonSocial.new.table_name_to_show, class: "control-label") %>
    </div>
    <div class="col-sm-10">
      <%= f.collection_select( :razon_social_id, RazonSocial.all, :id, :record_name_to_show, { prompt: '-Seleccionar-'}, { class: "form-control c-select" }) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :monto_contrato, class: "control-label" %>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :monto_contrato, class: "form-control" %>
    </div>
  </div>
  <%= f.fields_for :comision_odts, @odt.comision_odts do |comision_odt_form| %>
    <div class="form-group row">
      <div class="col-sm-2">
        <div class="row">
          <div class="col-sm-8">
            <% if comision_odt_form.index == 0 then %>
              <%= comision_odt_form.label( 'comision_odt_employee_id', Employee.new.table_name_to_show ) %>
            <% end %>
          </div>
          <div class="col-sm-4">
            <button type="button" class="close equis remover">×</button> 
          </div>
        </div>
      </div>
      <div class="col-sm-5">
        <%= comision_odt_form.collection_select( :employee_id, Employee.all, :id, :record_name_to_show, { prompt: '-Seleccionar-'}, { class: "form-control c-select" } ) %>
      </div>
      <div class="col-sm-5">
        <%= comision_odt_form.text_field :p_comision, class: "form-control" %>
      </div>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
      <button type="button" class="btn btn-info adder">Añadir</button>   
    </div>
  </div>  
<% end %>
