updated_row = $("<%= j render 'row' %>")
id = updated_row.attr('id')
old_row = $('#'+id)
modal = $(old_row).find('div.modal')
modal.modal('hide')
modal.on('hidden.bs.modal', function() {
  updated_row.hide()
  old_row.after(updated_row)
  old_row.fadeOut(300, function() {
    old_row.remove()
    updated_row.fadeIn()    
  })
})