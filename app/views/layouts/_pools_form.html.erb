<%= form_for(@pool, namespace: namespace_id, :html=> {:id => namespace_id}) do |f| %>
  <% if @pool.errors.any? %>
    <div id="error_explanation_<%=namespace_id%>">
      <h2><%= pluralize(@pool.errors.count, "error") %> prohibited this pool from being saved:</h2>
      <ul>
      <% @pool.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :date_of, "Fecha", class: "control-label" %><br>
    </div>
    <div class="col-sm-4">
      <%= f.date_field :date_of, :value => Date.today, class: "form-control" %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :category_type, 'Categoría', class: "control-label" %><br>
    </div>
    <div class="col-sm-4"> 
      <%= f.select(:category_type, options_for_select( categories.collect { |category| [eval(category).new.category_name_to_show, category] }, @pool.category_type ), { prompt: '--Seleccionar--'}, { class: "form-control c-select chosen-select chosen-select" } ) %>
    </div>
    <% categories.each do |category| %>
      <div id= <%= category+namespace_id %> class="<%= 'hidden' if @pool.category_type != category %>">
        <div class="col-sm-4">
          <%= f.collection_select( :category_id, eval(category).all, :id, :record_name_to_show, { prompt: '-Seleccionar-'}, { class: "form-control c-select chosen-select chosen-select" }) %>
        </div>
        <div class="col-sm-2">
          <%= render 'layouts/modal_button', :btn_name => 'Añadir', :namespace_id=> "new_"+category.downcase %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label( :razon_social_id, RazonSocial.new.table_name_to_show, class: "control-label") %>
    </div>
    <div class="col-sm-8">
      <%= f.collection_select( :razon_social_id, RazonSocial.all, :id, :record_name_to_show, { prompt: '-Seleccionar-'}, { class: "form-control c-select chosen-select chosen-select" }) %>
    </div>
    <div class="col-sm-2">
      <%= render 'layouts/modal_button', :btn_name => 'Añadir', :namespace_id => 'new_razon_social' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :monto, class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :monto, class: "form-control", :required => true %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :forma_de_pago, "Forma de pago", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.collection_select( :forma_de_pago, @pool.forma_de_pagos_for_collection, :first, :last, { prompt: '-Seleccionar-'}, { class: "form-control c-select chosen-select chosen-select" }) %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :forma_de_pago_nro, class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :forma_de_pago_nro, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :comprobante_type, "Tipo de comprobante", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.collection_radio_buttons(:comprobante_type, Pool.comprobante_types, :first, :first) do |b|
        content_tag(:div, class: "form-check") do
          b.label(class: "form-check-label") {
            b.radio_button(class: "form-check-input") + b.text
          }
        end
      end %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :n_comprobante, "Nº de comprobante", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :n_comprobante, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :description, "Descripción", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :receiver, "Recibido por", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.text_field :receiver, class: "form-control" %>
    </div>
  </div>
<% end %>