<p id="notice"><%= notice %></p>
<h1><%= RazonSocial.new.table_name_to_show %></h1>
<p><%= link_to 'Nuevo Registro', modal_razon_socials_url(0,1,1), :method => :get, :remote => true, :class => "btn btn-primary auto_load" %></p>

<div class="table">
  <table id="main_table" class="table table-sm table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>Rif o CI</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>% Retencione</th>
        <th>Teléfono</th>
        <th>Email</th>
        <th>Dirección</th>
        <th>Nombre de contacto</th>
        <th>Número de teléfono de contacto</th>
        <th>Email de contacto</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @razon_socials.reverse.each do |razon_social| %>
        <tr id="<%=razon_social.id%>">
          <td><%= razon_social.rif_ci %></td>
          <td><%= razon_social.name %></td>
          <td><%= razon_social.description %></td>
          <td><%= razon_social.percent_retencione_iva %></td>
          <td><%= razon_social.phone %></td>
          <td><%= razon_social.email %></td>
          <td><%= razon_social.address %></td>
          <td><%= razon_social.contact_name %></td>
          <td><%= razon_social.contact_phone %></td>
          <td><%= razon_social.contact_email %></td>
          <td><%= link_to 'Editar', modal_razon_socials_url(razon_social.id,1,1), :method => :get, :remote => true, :class => "btn btn-primary" %></td>
          <td><%= link_to '×', razon_social, method: :delete, data: { confirm: '¿Está seguro?' }, :remote => true, class: "close equis delete_row" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>