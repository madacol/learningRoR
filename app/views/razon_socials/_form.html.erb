<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal_<%=id%>"><%=btn_name%>
</button>
<div class="modal fade" id="Modal_<%=id%>" tabindex="-1" role="dialog" aria-labelledby="Modal_<%=id%>Label" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="Modal_<%=id%>Label">Nuevo registro</h4>
       </div>
        <div class="modal-body">         
          <%= form_for(razon_social) do |f| %>
            <% if razon_social.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(razon_social.errors.count, "error") %> prohibited this razon_social from being saved:</h2>
                <ul>
                <% razon_social.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :rif_ci, class: "control-label" %><br>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :rif_ci, class: "form-control" %>
            </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :name, class: "control-label" %><br>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :name, class: "form-control" %>
            </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :description, class: "control-label" %><br>
              </div>
              <div class="col-sm-10">
                <%= f.text_area :description, class: "form-control" %>
            </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :phone, class: "control-label" %><br>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :phone, class: "form-control" %>
            </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :email, class: "control-label" %><br>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :email, class: "form-control" %>
            </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :address, class: "control-label" %><br>
              </div>
              <div class="col-sm-10">
                <%= f.text_area :address, class: "form-control" %>
            </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :contact_name, class: "control-label" %><br>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :contact_name, class: "form-control" %>
            </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :contact_phone, class: "control-label" %><br>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :contact_phone, class: "form-control" %>
            </div>
            </div>
            <div class="form-group row">
              <div class="col-sm-2">
                <%= f.label :contact_email, class: "control-label" %><br>
              </div>
              <div class="col-sm-10">
                <%= f.text_field :contact_email, class: "form-control" %>
            </div>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= submit_tag 'Guardar registro', class: "btn btn-primary", form: id %>
      </div>
    </div>
  </div>
</div>