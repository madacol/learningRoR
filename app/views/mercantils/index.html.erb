<p id="notice"><%= notice %></p>
<h1><%= Mercantil.new.table_name_to_show %></h1>
<p><%= render 'layouts/modal', :@mercantil => @new_mercantil, :btn_name => 'Nuevo Registro', :namespace_id => 'new_mercantil' %></p>
<div class="table-responsive">
  <table class="table table-sm table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Categoria</th>
        <th>Nombre o Alias</th>      
        <th><%= RazonSocial.new.table_name_to_show %></th>   
        <th>Monto</th>
        <th>Balance</th>
        <th>Tipo de comprobante</th>
        <th>Nº comprobante</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @mercantils.reverse.each do |mercantil| %>
        <tr>
          <td><%= mercantil.date_of %></td>
          <td><%= (link_to mercantil.category.table_name_to_show, mercantil.category.class) if mercantil.category %></td>
          <td><%= (link_to mercantil.category.record_name_to_show, mercantil.category) if mercantil.category %></td>
          <td><%= (link_to mercantil.razon_social.record_name_to_show, mercantil.razon_social) if mercantil.razon_social %></td>
          <td><%= mercantil.monto %></td>
          <td><%= mercantil.balance %></td>
          <td><%= mercantil.comprobante_type %></td>
          <td><%= mercantil.n_comprobante %></td>
          <td><%= mercantil.description %></td>
          <td><%= render 'layouts/modal', :@mercantil => mercantil, :btn_name => 'Editar', :namespace_id => "edit_mercantil_#{mercantil.id}" %></td>
          <td><%= link_to '×', mercantil, method: :delete, data: { confirm: '¿Está seguro?' }, class: "close equis" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>