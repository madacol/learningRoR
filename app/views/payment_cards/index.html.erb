<p id="notice"><%= notice %></p>
<h1><%= @new_payment_card.table_name_to_show %></h1>
<p>
  <%= render 'layouts/modal_button', :btn_name => 'Nuevo Registro', :namespace_id => "new_payment_card" %>
  <%= render 'layouts/modal', :@payment_card => @new_payment_card, :modal_title => 'Nuevo Registro', :namespace_id => "new_payment_card" %>
</p>
<div class="table-responsive">
  <table class="table table-sm table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>Banco</th>
        <th>Tipo</th>
        <th>Úlimos dígitos</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @payment_cards.reverse.each do |payment_card| %>
        <tr>
          <td><%= payment_card.bank %></td>
          <td><%= payment_card.card_type %></td>
          <td><%= payment_card.last_digits %></td>
          <td><%= payment_card.status %></td>
          <td>
            <%= render 'layouts/modal_button', :btn_name => 'Editar', :namespace_id => "edit_payment_card_#{payment_card.id}" %>
            <%= render 'layouts/modal', :@payment_card => payment_card, :modal_title => 'Editar', :namespace_id => "edit_payment_card_#{payment_card.id}" %>
          </td>
          <td><%= link_to '×', payment_card, :method => :delete, :data => { :confirm => '¿Está seguro?' }, :remote => true, :class => "delete_row close equis" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>