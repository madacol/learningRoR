<%= form_for(@payment_card, namespace: namespace_id, :html=> {:id => namespace_id}) do |f| %>
  <% if @payment_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@payment_card.errors.count, "error") %> prohibited this payment_card from being saved:</h2>
      <ul>
      <% @payment_card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :bank, "Banco", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.collection_select( :bank, PaymentCard.banks, :first, :first, { prompt: '-Seleccionar-'}, { class: "form-control c-select chosen-select chosen-select" }) %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :card_type, "Tipo", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.collection_select( :card_type, PaymentCard.card_types, :first, :first, { prompt: '-Seleccionar-'}, { class: "form-control c-select chosen-select chosen-select" }) %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :last_digits, "Últimos dígitos", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.number_field :last_digits, class: "form-control" %>
    </div>  
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
      <%= f.label :status, "Status", class: "control-label" %><br>
    </div>
    <div class="col-sm-10">
      <%= f.collection_select( :status, PaymentCard.statuses, :first, :first, { prompt: '-Seleccionar-'}, { class: "form-control c-select chosen-select chosen-select" }) %>
    </div>  
  </div>
<% end %>
