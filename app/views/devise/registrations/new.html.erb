<h2>Registro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
 
 

  <div class="form-group">
    <%= f.label :employee_id, "Empleado" %>
    <%= f.collection_select( :employee_id, Employee.includes(:user).where( :users => { :employee_id => nil } ), :id, :record_name_to_show, { prompt: '-Seleccionar-'}, { class: "form-control c-select chosen-select" }) %>
  </div>

  <div class="form-group">
    <%= f.label :email, "E-mail" %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password, "ContraseÃ±a" %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    <% if @validatable %>
      <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar contraseÃ±a" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>

  <%= f.submit "Registrar", class: 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
