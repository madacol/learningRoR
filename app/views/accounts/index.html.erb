<p id="notice"><%= notice %></p>
<h1><%= Account.new.table_name_to_show %></h1>
<p>
  <%= render "layouts/modal_button", :btn_name => 'Nuevo Registro', :namespace_id => 'new_account' %>
  <%= render "layouts/modal", :@account => @new_account, :modal_title => 'Nuevo Registro', :namespace_id => 'new_account' %>
</p>
<div class="table-responsive">
  <table class="table table-sm table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>N cuenta</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @accounts.reverse.each do |account| %>
        <tr>
          <td><%= account.name %></td>
          <td><%= account.n_cuenta %></td>
          <td><%= account.description %></td>
          <td>
            <%= render "layouts/modal_button", :btn_name => 'Editar', :namespace_id => "edit_account_#{account.id}" %>
            <%= render "layouts/modal", :@account => account, :modal_title => 'Editar', :namespace_id => "edit_account_#{account.id}" %>
          </td>
          <td><%= link_to '×', account, method: :delete, data: { confirm: '¿Está seguro?' }, :remote => true, class: "close equis delete_row" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>